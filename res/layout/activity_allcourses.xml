<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ToggleButton
            android:id="@+id/allcourses_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textOff="@string/allcourses_edit_btn_off"
            android:textOn="@string/allcourses_edit_btn_on" />
        
        <TextView
            android:id="@+id/allcourses_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/allcourses_btn_add"
            android:layout_toRightOf="@+id/allcourses_btn_edit"
            android:layout_alignBottom="@+id/allcourses_btn_edit"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/allcourses_title" />
        
        <Button
            android:id="@+id/allcourses_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/allcourses_btn_calendar"
            android:layout_alignParentTop="true"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:textSize="0dp" />
        
        <Button
            android:id="@+id/allcourses_btn_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableTop="@android:drawable/ic_menu_my_calendar"
            
            android:textSize="0dp" />

    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</LinearLayout>