<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Course Info -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Course code -->
        <TextView
            android:id="@+id/course_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="--course code--"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- Course description -->
        <TextView
            android:id="@+id/course_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="--course name--"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Divider -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

    <!-- Time Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/course_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="--time label--"
            android:paddingRight="@dimen/label_padding" />

        <TextView
            android:id="@+id/course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="-- time --"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Divider -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

    <!-- Location info -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- Building -->
        <TextView
            android:id="@+id/course_building_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_building_label" />

        <TextView
            android:id="@+id/course_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/course_building_label"
            android:hint="--building--" />

        <!-- Room -->
        <TextView
            android:id="@+id/course_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/course_building_label"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_room_label" />

        <TextView
            android:id="@+id/course_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/course_room_label"
            android:layout_alignBottom="@+id/course_room_label"
            android:layout_toRightOf="@+id/course_room_label"
            android:hint="--room--" />

        <!-- Show on map button -->
        <Button
            android:id="@+id/course_btn_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/course_map_btn" />
    </RelativeLayout>

    <!-- Divider -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
         >
    <!-- Instructor info -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/course_divider_bottom" >

        <!-- Name -->
        <TextView
            android:id="@+id/course_instructor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_instructor_label" />

        <TextView
            android:id="@+id/course_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/course_instructor_label"
            android:hint="--instructor--" />
        
        <!-- Email -->
        <TextView
            android:id="@+id/course_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/course_instructor_label"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_email_label" />

        <TextView
            android:id="@+id/course_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/course_email_label"
            android:layout_toRightOf="@+id/course_email_label"
            android:hint="--email--" />

        <!-- Phone -->
        <TextView
            android:id="@+id/course_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/course_email_label"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_phone_label" />

        <TextView
            android:id="@+id/course_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/course_phone_label"
            android:layout_toRightOf="@+id/course_phone_label"
            android:hint="--phone--" />


        <!-- Office location -->
        <TextView
            android:id="@+id/course_office_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/course_phone_label"
            android:paddingRight="@dimen/label_padding"
            android:text="@string/course_office_label" />

        <TextView
            android:id="@+id/course_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/course_office_label"
            android:layout_alignBottom="@+id/course_office_label"
            android:layout_toRightOf="@+id/course_office_label"
            android:hint="--office--" />

        <!-- Edit instructor button -->
        <Button
            android:id="@+id/course_btn_edit_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/course_office_hours_label"
            android:text="@string/course_instructor_edit_btn" />
        
        <!-- Office hours -->
        <TextView
            android:id="@+id/course_office_hours_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/course_office_label"
            android:text="@string/course_office_hours_label" />

        <ScrollView
            android:id="@+id/course_sv_office_hours"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/course_divider_bottom"
            android:layout_below="@id/course_office_hours_label" >

            <LinearLayout
                android:id="@+id/course_ll_office_hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

   
          <!-- Divider -->
    <ImageView
        android:id="@+id/course_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:layout_above="@+id/course_ll_bottom"
        android:src="@android:drawable/divider_horizontal_dark" />

    <!-- Bottom section -->
    <LinearLayout
        android:id="@+id/course_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- Notes/Reminders/Assignments buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/course_btn_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_notes_btn" />

            <Button
                android:id="@+id/course_btn_reminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_reminders_btn" />

            <Button
                android:id="@+id/course_btn_assignments_exams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_assignments_exams_btn" />
        </LinearLayout>

        <!-- Next course info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView 
                android:id="@+id/course_next_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_next_course_label" />
            
            <TextView
                android:id="@+id/course_next_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="--code--" />
            <TextView 
                android:id="@+id/course_next_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="--desc--" />
            
            <TextView
                android:id="@+id/course_next_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_next_course_time" />
            <TextView
                android:id="@+id/course_next_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-- time --" />
            <TextView
                android:id="@+id/course_next_instructor_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_next_instructor" />
            <TextView
                android:id="@+id/course_next_instructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="--instructor--" />
        </LinearLayout>
    </LinearLayout>
   
</RelativeLayout>
</LinearLayout>