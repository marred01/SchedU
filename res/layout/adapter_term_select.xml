<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/term_tv_select"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/darkText" />

    <Button
        android:id="@+id/term_btn_edit"
        style="@style/button1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:drawableTop="@android:drawable/ic_menu_edit"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/term_btn_delete"
        style="@style/button1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/term_btn_edit"
        android:drawableTop="@android:drawable/ic_menu_delete"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/term_btn_start"
        style="@style/button1"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@id/term_tv_select"
        android:text="Start Date" />

    <Button
        android:id="@+id/term_btn_end"
        style="@style/button1"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@id/term_tv_select"
        android:layout_toRightOf="@id/term_btn_start"
        android:text="End Date" />

</RelativeLayout>