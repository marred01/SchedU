<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="label" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/label_padding</item>
    </style>

    <style name="label_small" parent="@style/label">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="divider">
        <item name="android:height">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/divider</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">Divider</item>
    </style>

    <style name="button1" parent="android:style/Widget.Button">
        <item name="android:textSize">10dp</item>
    </style>

    <color name="dividerColor">#ffaaaaaa</color>
    
    <color name="red">#ffff0000</color>

</resources>